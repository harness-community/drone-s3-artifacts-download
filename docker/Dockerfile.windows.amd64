# Use the appropriate base image for Windows/amd64
FROM mcr.microsoft.com/windows/servercore:ltsc2019

# Build go binary for windows/amd64
RUN env GOOS=windows go build -o release/windows/amd64/drone-s3-artifacts-download.exe

# Copy the binary from your release directory to the /bin/ directory in the image
ADD release/windows/amd64/drone-s3-artifacts-download.exe /bin/

# Set the entry point for the container
ENTRYPOINT ["C:\\\\bin\\drone-s3-artifacts-download.exe"]